<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_height="match_parent"
    tools:context="com.example.sandilya.myfirstapp.TabFragment1">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Tab1"
        android:textColor="@android:color/white"
        android:id="@+id/txtView1"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button
        android:text="Percentage Calculator"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/perc_button"
        tools:text="Percentage Calculator!"
        android:textColor="@android:color/white"
        android:layout_below="@+id/d_button"
        android:layout_centerHorizontal="true"
         />

    <Button
        android:text="Work Week Calculator"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/ww_button"
        tools:text="Work week Calc"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_above="@id/d_button"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:text="Date  Calculator"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/d_button"
        tools:text="date Calc"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:elevation="24dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ww_button"
        android:layout_alignStart="@+id/ww_button" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtView2"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_height="100dp"
        android:layout_above="@id/ww_button"/>

</RelativeLayout>

</FrameLayout>
